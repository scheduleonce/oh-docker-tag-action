    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.5"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "4.0.0",
    "ansi-colors": "^4.1.1",
